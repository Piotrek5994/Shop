@model CartViewModel

@{
    ViewData["Title"] = "Cart Overview";
}

@if (Model.CartItems.Count > 0)
{
    <table class="table">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th></th>
            <th>Price</th>
            <th>Total</th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>
                    <a class="button-84" asp-action="Add" asp-route-id="@item.ProductId">+</a>
                    <a class="button-84" asp-action="Decrease" asp-route-id="@item.ProductId">-</a>
                    <a class="button-84" asp-action="Remove" asp-route-id="@item.ProductId">
                        <i class="gg-trash"></i>
                        </a>
                </td>
                <td>@item.Price.ToString("C2")</td>
                <td>@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("C2")</td>
            </tr>
        }
        <tr>
            <td class="text-right" colspan="4">Grand Total: @Model.GrandTotal.ToString("C2")</td>
        </tr>
        <tr>
            <td class="text-right" colspan="4">
                <a class="btn btn-light" asp-action="Clear">Clear Cart</a>
                <a class="btn btn-primary" href="#">Checkout</a>
            </td>
        </tr>
    </table>


}
else
{
    <h3 class="display-4 text-center">Your cart is empty.</h3>
}



